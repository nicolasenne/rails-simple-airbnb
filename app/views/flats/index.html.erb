<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1464890100898-a385f744067f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80')">
  <div class="container">
    <h1>All our Flats</h1>
  </div>
</div>

<h2>All <%= Flat.count %> flats.</h2>

<% @flats.each do |flat| %>
  <div class="flat-card">
    <img width="100" src="https://images.unsplash.com/photo-1464890100898-a385f744067f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80">
    <h4><%= flat.name %></h4>
    <p><%= flat.address %></p>
    <i class="fa-solid fa-people-line"></i>
    <span><%= flat.number_of_guests %></span>
    <i class="fa-solid fa-euro-sign"></i>
    <span><%= flat.price_per_night %></span>
    <%= link_to "More info", flat_path(flat) %>
    <%= link_to "Edit", edit_flat_path(flat), class: "ms-3 text-warning" %>
    <%= link_to "Remove", flat_path(flat),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
        class: "ms-3 text-danger"%>
  </div>
<% end %>